<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shake.letz.wovent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wovent_only_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wovent_only_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AgregarActividadActivity"
            android:label="@string/title_activity_agregar_actividad" />
        <activity android:name=".DetalleEvento"></activity>
        <activity
            android:name=".EditarEventoActivity"
            android:label="@string/title_activity_editar_evento"></activity>
    </application>

</manifest>