<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaeaea"
    tools:context=".DetalleFragment">


    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="190dp"
        android:paddingTop="5dp"
        android:text="20/04/2019"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="190dp"
        android:paddingTop="5dp"
        android:text="20/04/2019"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="2dp"
        android:text="Inicia"
        android:textColor="@color/common_google_signin_btn_text_light_default" />

    <TextView
        android:id="@+id/inicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="2dp"
        android:text="Finaliza"
        android:textColor="@color/common_google_signin_btn_text_light_default" />

    <TextView
        android:id="@+id/nombre_evento"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="161dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Nombre del Evento"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:background="@color/common_google_signin_btn_text_light_default" />

    <TextView
        android:id="@+id/desc_event"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/start_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimary"
        android:paddingTop="5dp"
        android:text="El evento este año será en Santiago, los esperamos!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        tools:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="383dp"
        android:layout_height="277dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-384dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/desc_event"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
