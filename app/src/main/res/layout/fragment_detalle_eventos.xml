<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaeaea"
    tools:context=".DetalleFragment">


    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/image_event"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-14dp"
        android:background="@color/colorPrimary"
        android:text="h"
        android:textColor="@color/colorPrimary"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/desc_event"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/image_event"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/open_sans"
        android:paddingTop="5dp"
        android:text="El evento este año será en Santiago, los esperamos!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        tools:textAlignment="center" />

    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/end_date"
        android:layout_alignTop="@+id/image_event"
        android:layout_marginStart="2dp"
        android:layout_marginTop="196dp"
        android:background="?android:attr/listDivider"
        tools:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/open_sans"
        android:paddingTop="5dp"
        android:text="20/04/2019"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/open_sans"
        android:paddingTop="5dp"
        android:text="20/04/2019"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/open_sans"
        android:text="Inicia"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:id="@+id/fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="276dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/open_sans"
        android:text="Finaliza"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:id="@+id/nombre_evento"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="160dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="10dp"
        android:text="Nombre del Evento"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:background="@color/common_google_signin_btn_text_light_default" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_actividades"
        android:layout_width="410dp"
        android:layout_height="355dp"
        android:layout_below="@+id/desc_event"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        tools:listitem="@layout/fragment_lista_programa"></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/fin"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_heart_event" />

</RelativeLayout>
